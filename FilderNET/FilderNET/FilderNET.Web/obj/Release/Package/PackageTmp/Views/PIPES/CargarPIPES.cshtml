
@{
    ViewBag.Title = "CargarPIPES";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">

                <h4 class="mt-0 header-title">Cargar PIPES</h4>
                <p class="text-muted m-b-30 font-14">
                    Favor de arrastrar o dar click en la zona para importar su archivo PIPES. (excel)
                </p>

                <div class="m-b-30">

                    @using (Html.BeginForm("UploadPIPES", "PIPES",FormMethod.Post, new { enctype = "multipart/form-data", @class = "dropzone" }))
                    {
                        <div class="fallback">
                            <input name="file" type="file">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->